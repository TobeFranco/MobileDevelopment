<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/txtUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="User"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="29dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.17" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/txtUser"
        android:layout_marginLeft="-10dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtUser" />

    <EditText
        android:id="@+id/txtTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Twitter"
        app:layout_constraintLeft_toLeftOf="@+id/txtEmail"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

    <EditText
        android:id="@+id/txtPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Phone"
        app:layout_constraintLeft_toLeftOf="@+id/txtTwitter"
        app:layout_constraintTop_toBottomOf="@+id/txtTwitter" />

    <EditText
        android:id="@+id/txtBirthDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="date"
        android:hint="BirthDate"
        app:layout_constraintTop_toBottomOf="@+id/txtPhone"
        app:layout_constraintLeft_toLeftOf="@+id/txtPhone" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:layout_marginLeft="68dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtBirthDate"
        android:layout_marginTop="39dp"
        app:layout_constraintTop_toBottomOf="@+id/txtBirthDate" />
</android.support.constraint.ConstraintLayout>
